{
  "name": "codecrafting-webapp",
  "type": "module",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "clean": "rimraf .next",
    "dev": "npm run dev:local",
    "start": "next start",
    "stop": "echo 'Use Ctrl+C to stop the development server'",
    "predev": "npm run db:generate",
    "dev:local": "next dev --turbopack",
    "dev:docker": "docker-compose -f docker-compose-local.yml up -d",
    "start:docker": "docker-compose -f docker-compose-local.yml up -d",
    "stop:docker": "docker-compose -f docker-compose-local.yml down",
    "build": "next build --turbopack",
    "postbuild": "shx cp -r public .next/standalone/ && shx cp -r .next/static .next/standalone/.next/",
    "start:prod": "next start",
    "testprod": "node .next/standalone/server.js",
    "lint": "biome check",
    "format": "biome format --write",
    "db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "logs": "docker-compose -f docker-compose-local.yml logs -f",
    "logs:docker": "docker-compose -f docker-compose-local.yml logs -f",
    "shell": "docker-compose -f docker-compose-local.yml exec nextjs sh",
    "shell:docker": "docker-compose -f docker-compose-local.yml exec nextjs sh"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^3.27.1",
    "@emotion/react": "^11.14.0",
    "@fontsource/inter": "^5.2.8",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.19.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "next": "15.5.3",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "prisma": "^6.19.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
